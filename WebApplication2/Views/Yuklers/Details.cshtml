}

<h1>Detaylar Sayfası</h1>

<div>
    <h4>Yukler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YukTuru)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YukTuru)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agirlik)
        </dt>
        <dd class="col-sm-10">
